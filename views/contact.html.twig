<html>
  <head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Address Book</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>Address Book</h1>
          {% if addresses is not empty %}
          <h2>You created a contact!</h2>
          <a href="/">Add more contacts</a>
        </div>
        
        <div class="col-md-6">
          <h3>Current addresses</h3>
          <ul>
            {% for address in addresses %}
            <li>{{ address.getName }}, {{ address.getNumber }}, {{ address.getAddress }}</li>
            {% endfor %}
          </ul>
          {% endif %}
        </div>
      </div>

    </div>
  </body>
</html>
